@model SAAS_Deployment.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullAddress.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullAddress.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullAddress.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullAddress.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullAddress.Province)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullAddress.Province)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullAddress.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullAddress.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullAddress.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullAddress.PostalCode)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalInformation)
        </dt>
        <dd class="col-sm-10">
            @{
                string[] pairs = Model.AdditionalInformation.Split(',');

                foreach (string pair in pairs)
                {
                    if (pair.Length == 0) break;
                    string[] keyValues = pair.Split(':');

                    <p> @keyValues[0] : @keyValues[1] </p>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Person_Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
