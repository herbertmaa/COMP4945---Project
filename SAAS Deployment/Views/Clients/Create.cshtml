@model SAAS_Deployment.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <partial name="_FullAddressPartial" for="FullAddress" />

            <div id="formOptions"> </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <input type="button" value="Add Option" class="btn btn-secondary" onclick="addOption()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script>
        function addOption() {
            let $div = $("<div>");
            let $label = $("<label>").text('Option Name: ');
            let $inputKey = $('<input type="text">').attr({ class: 'ExtraValueName', name: 'ExtraValueName' });
            let $inputPair = $('<input type="text">').attr({ class: 'Value', name: 'Value' });

            $div.append($label);
            $div.append("<br>");
            $div.append($inputKey);
            $div.append($inputPair);


            $('#formOptions').append($div);
        }
     </script>
}
